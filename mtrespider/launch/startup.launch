<launch>
    <node name="uvc_camera_node" pkg="uvc_camera" type="uvc_camera_node">
	    <remap from="/image_raw" to="/spider/camera_front/image_raw"/>
        <remap from="/camera_info" to="/spider/camera_front/camera_info"/>
        <param name="device" type="string" value="/dev/video0"/>
        <param name="width" type="int" value="640"/>
        <param name="height" type="int" value="480"/>
        <param name="fps" type="int" value="30"/>
    </node>
    <node name="image_view" pkg="image_view" type="image_view">
        <remap from="/image" to="/spider/camera_front/image_raw"/>
    </node>
    <node name="ferrosensor" pkg="mtrespider" type="ferrosensor"/>
    <node name="transducerarm" pkg="mtrespider" type="transducerarm"/>
</launch>
